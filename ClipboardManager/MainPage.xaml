<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ClipboardManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:clip="using:ClipboardManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
    Loading="Page_Loading"
    Loaded="Page_Loaded"
    SizeChanged="Page_SizeChanged">

    <Grid x:Name="RootGrid" BorderThickness="2" CornerRadius="{StaticResource OverlayCornerRadius}" ActualThemeChanged="RootGrid_ActualThemeChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="33"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.BorderBrush>
            <SolidColorBrush x:Name="RootGridBorderBrush" Color="{ThemeResource SystemAccentColor}" Opacity="0"/>
        </Grid.BorderBrush>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="CreateNewActions">
                    <VisualState.Setters>
                        <Setter Target="CreateActionsInfoBar.Visibility" Value="Visible"/>
                        <Setter Target="CreateActionsInfoBar.IsOpen" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="ViewActions">
                    <VisualState.Setters>
                        <Setter Target="ViewActionsInfoBar.Visibility" Value="Visible"/>
                        <Setter Target="ViewActionsInfoBar.IsOpen" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <VisualState x:Name="ShowActionsListView"/>
                <VisualState x:Name="ShowSearchListView">
                    <VisualState.Setters>
                        <Setter Target="SearchActionsListView.Visibility" Value="Visible"/>
                        <Setter Target="ActionsListView.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <VisualState x:Name="NormalStartup"/>
                <VisualState x:Name="FirstStartup">
                    <VisualState.Setters>
                        <Setter Target="StartTourInfoBar.IsOpen" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="UpdatedStartup">
                    <VisualState.Setters>
                        <Setter Target="ApplicationUpdatedInfoBar.IsOpen" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <VisualState x:Name="DisplayClipboardTriggers"/>
                <VisualState x:Name="NoClipboardTriggersToDisplay">
                    <VisualState.Setters>
                        <Setter Target="ClipboardTriggersListView.Visibility" Value="Collapsed"/>
                        <Setter Target="NoClipboardTriggersTextBlock.Visibility" Value="Visible"/>
                        <Setter Target="NoClipboardActionsInfoBar.Visibility" Value="Visible"/>
                        <Setter Target="NoClipboardActionsInfoBar.IsOpen" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <VisualState x:Name="QuickSettingsClosed">
                    <VisualState.Setters>
                        <Setter Target="QuickSettingsStackPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="QuickSettingsStackPanel.Opacity" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="QuickSettingsOpen">
                    <VisualState.Setters>
                        <Setter Target="QuickActionsRightColumn.Width" Value="*"/>
                        <Setter Target="QuickActionsLeftColumn.Width" Value="Auto"/>
                        <Setter Target="QuickSettingsStackPanel.Visibility" Value="Visible"/>
                        <Setter Target="QuickSettingsStackPanel.Opacity" Value="1"/>
                        <Setter Target="OpenQuickSettingsButtonFontIcon.Glyph" Value="&#xe76c;"/>
                        <Setter Target="SearchBoxGrid.Opacity" Value="0"/>
                        <Setter Target="SearchBoxGrid.Visibility" Value="Collapsed"/>
                        <Setter Target="SearchActionsListView.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="SearchClosed">
                    <VisualState.Setters>
                        <Setter Target="SearchBoxGrid.Opacity" Value="0"/>
                        <Setter Target="SearchBoxGrid.Visibility" Value="Collapsed"/>
                        <Setter Target="SearchActionsListView.Visibility" Value="Collapsed"/>
                        <Setter Target="SearchActionsListView.Opacity" Value="0"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="SearchOpened">
                    <VisualState.Setters>
                        <Setter Target="QuickActionsLeftColumn.Width" Value="*"/>
                        <Setter Target="QuickActionsRightColumn.Width" Value="Auto"/>
                        <Setter Target="QuickSettingsStackPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="SearchBoxGrid.Visibility" Value="Visible"/>
                        <Setter Target="SearchBoxGrid.Opacity" Value="1"/>
                        <Setter Target="QuickSettingsStackPanel.Opacity" Value="0"/>
                        <Setter Target="SearchActionsGrid.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="SearchActionsListView.Visibility" Value="Visible"/>
                        <Setter Target="SearchActionsListView.Opacity" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <VisualState x:Name="NormalWindow"/>
                <VisualState x:Name="OverlayWindow">
                    <VisualState.Storyboard>
                        <Storyboard>
                            <DoubleAnimationUsingKeyFrames 
                                Storyboard.TargetName="RootGridBorderBrush"
                                Storyboard.TargetProperty="Opacity"
                                Duration="0:0:0.8"
                                EnableDependentAnimation="True">
                                <SplineDoubleKeyFrame KeyTime="0:0:0.5" KeySpline="{StaticResource ControlFastOutSlowInKeySpline}" Value="0.7" />
                                <LinearDoubleKeyFrame KeyTime="0:0:0.8" Value="0"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState.Storyboard>

                    <VisualState.Setters>
                        <Setter Target="OverlayToggleButtonContent.Glyph" Value="&#xee47;"/>
                        <Setter Target="MoveBorder.Visibility" Value="Collapsed"/>
                        <Setter Target="OverlayCloseButton.Visibility" Value="Visible"/>
                        <Setter Target="WindowButtonsColumn.Width" Value="Auto"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

            <VisualStateGroup>
                <VisualState x:Name="Under1000"/>
                <VisualState x:Name="Over1000">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames
                            Storyboard.TargetName="ClipboardTriggersListView"
                            Storyboard.TargetProperty="Opacity"
                            EnableDependentAnimation="True">
                            <DiscreteDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                            <DiscreteDoubleKeyFrame KeyTime="0:0:0.6" Value="0"/>
                            <!--<DiscreteDoubleKeyFrame KeyTime="0:0:0.2" Value="0"/>-->
                            <LinearDoubleKeyFrame KeyTime="0:0:1.3" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>

                    <VisualState.Setters>
                        <Setter Target="ClipboardTriggersListView.Layout">
                            <Setter.Value>
                                <UniformGridLayout 
                                    ItemsJustification="Center" 
                                    MinItemHeight="210" 
                                    MinItemWidth="450" 
                                    MinColumnSpacing="5" 
                                    MinRowSpacing="5"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="ClipboardTriggersListView.HorizontalAlignment" Value="Center"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid x:Name="TitleBarGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="OverlayButtonColumn" Width="Auto"/>
                <ColumnDefinition x:Name="DragBorderColumn" Width="*"/>
                <ColumnDefinition x:Name="WindowButtonsColumn" Width="45"/>
            </Grid.ColumnDefinitions>

            <ToggleButton 
                x:Name="OverlayToggleButton"
                Style="{StaticResource IconToggleButtonStyle}" 
                Grid.Column="0"
                MaxHeight="30"
                IsChecked="{x:Bind OverlayEnabled, Mode=TwoWay}"
                Checked="OverlayToggleButton_Click">
                <FontIcon x:Name="OverlayToggleButtonContent" Glyph="&#xee49;" FontSize="16"/>
            </ToggleButton>
            <TeachingTip x:Name="OverlayToggleButtonTeachingTip" Target="{x:Bind OverlayToggleButton}">
                <StackPanel Orientation="Vertical" Spacing="7">
                    <TextBlock x:Uid="OverlayPopupTitleTextBlock" Style="{StaticResource TitleTextBlockStyle}" TextWrapping="Wrap"/>
                    <TextBlock x:Uid="OverlayPopupContentTextBlock" TextWrapping="Wrap"/>
                    <TextBlock x:Uid="ShowWindowShortcutTextBlock" TextWrapping="Wrap" Margin="0,7,0,0"/>
                    <StackPanel Orientation="Horizontal" Spacing="7" HorizontalAlignment="Center">
                        <StackPanel.Resources>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{ThemeResource SolidBackgroundFillColorBaseBrush}" />
                                <Setter Property="Padding" Value="10,8" />
                                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style x:Key="ShortcutTextBlockStyle" TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="FontFamily" Value="Consolas" />
                                <Setter Property="CharacterSpacing" Value="70" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </StackPanel.Resources>
                        <Border>
                            <TextBlock Text="CTRL" Style="{StaticResource ShortcutTextBlockStyle}"/>
                        </Border>
                        <TextBlock Text="+" VerticalAlignment="Center"/>
                        <Border>
                            <TextBlock Text="SPACE" Style="{StaticResource ShortcutTextBlockStyle}"/>
                        </Border>
                    </StackPanel>
                    <CheckBox x:Uid="OverlayPopupShowWarningCheckBox" IsChecked="True" Margin="0,7,0,0" Click="OverlayPopupShowWarningCheckBox_Click"/>
                </StackPanel>
            </TeachingTip>
            
            <Border 
                x:Name="MoveBorder"
                Grid.ColumnSpan="3"
                CornerRadius="2" 
                Height="3"
                Background="{ThemeResource TextFillColorPrimaryBrush}"
                MaxWidth="100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Opacity="0.7"/>

            <Button x:Name="OverlayCloseButton" x:Load="False" Style="{StaticResource IconButtonStyle}" Grid.Column="2" 
                    Content="&#xe921;" Visibility="Collapsed" Click="OverlayCloseButton_Click"/>
        </Grid>

        <clip:MessagesBar x:Name="MessagesBar" Grid.Row="1"/>

        <Pivot x:Name="Pivot" SelectedIndex="2" Grid.Row="2">
            <PivotItem x:Name="SettingsPivotItem" Margin="0" Padding="5,3,5,0">
                <PivotItem.Header>
                    <FontIcon x:Name="SettingsPivot" Glyph="&#xe713;" FontSize="16"/>
                </PivotItem.Header>

                <Frame>
                    <clip:SettingsPage/>
                </Frame>
            </PivotItem>

            <PivotItem x:Name="ClipboardTriggersPivotItem" Padding="0" Margin="0">
                <PivotItem.Header>
                    <FontIcon x:Name="ClipboardTriggersPivot" Glyph="&#xe945;" FontSize="16"/>
                </PivotItem.Header>

                <Grid x:Name="TriggersPivotGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.Transitions>
                        <RepositionThemeTransition/>
                    </Grid.Transitions>

                    <CommandBar x:Name="TriggersCommandBar" Background="Transparent" DefaultLabelPosition="Right">
                        <AppBarButton 
                            x:Name="CommandBarImportButton"
                            x:Uid="CommandBarImportButton" 
                            Icon="OpenFile"
                            Click="CommandBarImportButton_Click"/>
                        <AppBarButton 
                            x:Name="CommandBarSaveButton" 
                            x:Uid="CommandBarSaveButton" 
                            Icon="Save" 
                            Click="CommandBarSaveButton_Click"/>
                        <AppBarButton 
                            x:Name="CommandBarReloadTriggersButton" 
                            x:Uid="CommandBarReloadTriggersButton" 
                            Icon="Refresh"
                            Click="ReloadTriggersButton_Click"/>
                        <AppBarButton 
                            x:Name="CommandBarAddTriggerButton" 
                            x:Uid="CommandBarAddTriggerButton" 
                            Icon="Add"
                            Click="AddTriggerButton_Click"/>
                        <AppBarButton 
                            x:Name="CommandBarTestRegexButton"
                            x:Uid="CommandBarTestRegexButton"
                            Click="TestRegexButton_Click">
                            <AppBarButton.Icon>
                                <FontIcon Glyph="&#xe943;"/>
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </CommandBar>

                    <TextBlock x:Name="NoClipboardTriggersTextBlock" x:Uid="NoClipboardActionsTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Opacity="0.8" Grid.Row="1" x:Load="False" Visibility="Collapsed"/>

                    <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" Padding="4,4,4,7">
                        <ScrollViewer.OpacityTransition>
                            <ScalarTransition Duration="0:0:0.381"/>
                        </ScrollViewer.OpacityTransition>
                        <ItemsRepeater
                            x:Name="ClipboardTriggersListView"
                            ItemsSource="{x:Bind ClipboardTriggers}">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Vertical" Spacing="7"/>
                            </ItemsRepeater.Layout>
                        </ItemsRepeater>
                    </ScrollViewer>

                    <clip:RegexTesterControl x:Name="TestRegexContentDialog" Grid.RowSpan="2"/>
                    <clip:ClipboardTriggerEditControl x:Name="ClipboardTriggerEditControl" Grid.RowSpan="2"/>
                </Grid>
            </PivotItem>

            <PivotItem x:Name="ClipboardActionsPivotItem" Padding="0" Margin="0">
                <PivotItem.Header>
                    <FontIcon x:Name="ClipboardActionsPivot" Glyph="&#xea8a;" FontSize="16"/>
                </PivotItem.Header>

                <Grid Padding="5,3,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <RepositionThemeTransition IsStaggeringEnabled="False"/>
                            <EntranceThemeTransition />
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>

                    <StackPanel Grid.Row="0" Spacing="3" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <InfoBar 
                            x:Name="NoClipboardActionsInfoBar"
                            x:Uid="NoClipboardActionsInfoBar"
                            x:Load="False"
                            Severity="Warning" 
                            IsClosable="False">
                            <InfoBar.Content>
                                <Grid Padding="0,0,5,5" ColumnSpacing="10" ColumnDefinitions="1*,1*">
                                    <HyperlinkButton Grid.Column="0" x:Uid="LocateButton" HorizontalAlignment="Stretch" Click="LocateUserFileButton_Click"/>
                                    <HyperlinkButton Grid.Column="1" x:Uid="CreateButton" HorizontalAlignment="Stretch" Click="CreateUserFileButton_Click"/>
                                </Grid>
                            </InfoBar.Content>
                        </InfoBar>

                        <InfoBar 
                            x:Name="ApplicationUpdatedInfoBar"
                            x:Uid="ApplicationUpdatedInfoBar"
                            x:Load="False"
                            Severity="Warning">
                            <InfoBar.Content>
                                <Grid Padding="0,0,5,5" ColumnSpacing="10" ColumnDefinitions="1*,1*">
                                    <HyperlinkButton Grid.Column="0" x:Uid="LocateButton" HorizontalAlignment="Stretch" Click="LocateUserFileButton_Click"/>
                                    <HyperlinkButton Grid.Column="1" x:Uid="CreateButton" HorizontalAlignment="Stretch" Click="CreateUserFileButton_Click"/>
                                </Grid>
                            </InfoBar.Content>
                        </InfoBar>

                        <InfoBar 
                            x:Name="CreateActionsInfoBar"
                            x:Uid="OpenSaveFileInfoBar"
                            x:Load="False"
                            Severity="Success">
                            <InfoBar.Content>
                                <HyperlinkButton x:Uid="CreateActionsButton" IsEnabled="False" HorizontalAlignment="Stretch" MaxWidth="150" Margin="0,0,0,5"/>
                            </InfoBar.Content>
                        </InfoBar>

                        <InfoBar 
                            x:Name="ViewActionsInfoBar"
                            x:Uid="ViewActionsInfoBar"
                            x:Load="False"
                            Severity="Success"/>

                        <InfoBar 
                            x:Name="StartTourInfoBar"
                            x:Uid="StartTourInfoBar"
                            x:Load="False"
                            Severity="Informational">
                            <InfoBar.Content>
                                <Button x:Uid="StartTourButton" HorizontalAlignment="Stretch" MaxWidth="150" Margin="0,0,0,5" Click="StartTourButton_Click"/>
                            </InfoBar.Content>
                        </InfoBar>
                    </StackPanel>

                    <Grid Grid.Row="1" MinHeight="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="QuickActionsLeftColumn" Width="1*"/>
                            <ColumnDefinition x:Name="QuickActionsRightColumn" Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="SearchActionsGrid" Grid.Column="0" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Button x:Name="OpenSearchButton" Style="{StaticResource IconButtonStyle}" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top"
                                    Margin="0,3,0,0"
                                    Click="OpenSearchButton_Click" >
                                <FontIcon Glyph="&#xe721;"/>
                            </Button>

                            <Grid x:Name="SearchBoxGrid" Grid.Column="1" Grid.RowSpan="2" Visibility="Collapsed" Opacity="0" ColumnSpacing="7" RowSpacing="3" 
                                  Scale="0,0,0" Margin="5,3,5,7" VerticalAlignment="Top" Loading="SearchBoxGrid_Loading">
                                <Grid.OpacityTransition>
                                    <ScalarTransition/>
                                </Grid.OpacityTransition>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBox 
                                    x:Name="SearchActionsAutoSuggestBox" 
                                    Grid.Column="0" 
                                    Grid.Row="0"
                                    HorizontalAlignment="Stretch" 
                                    Height="35"
                                    TextChanged="SearchActionsAutoSuggestBox_TextChanged" 
                                    GotFocus="SearchActionsAutoSuggestBox_GotFocus"/>

                                <StackPanel x:Name="SearchButtonsStackPanel" Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Spacing="5" IsHitTestVisible="False">
                                    <ToggleButton x:Name="SearchTriggersToggleButton" Padding="6,3,6,4">
                                        <TextBlock x:Uid="SearchTriggersToggleButtonText" Text="a: actions" FontSize="12"/>
                                    </ToggleButton>
                                    <ToggleButton x:Name="SearchTextToggleButton" Padding="6,3,6,4">
                                        <TextBlock x:Uid="SearchTextToggleButtonText" Text="a: actions" FontSize="12"/>
                                    </ToggleButton>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.RowSpan="2" Spacing="3" Orientation="Horizontal" VerticalAlignment="Top">
                                    <ToggleButton 
                                        x:Name="SearchActionsIgnoreCaseToggleButton" 
                                        x:Uid="IgnoreCaseTextBlock" 
                                        Content="i" 
                                        FontFamily="Consolas" 
                                        Height="35"
                                        HorizontalAlignment="Stretch"/>
                                    <ToggleSplitButton 
                                        Content="&#xec92;" 
                                        FontFamily="{StaticResource SymbolThemeFontFamily}" 
                                        FontSize="14"
                                        Height="35"
                                        HorizontalAlignment="Stretch">
                                        <ToggleSplitButton.Flyout>
                                            <Flyout>
                                                <Grid Margin="-8" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <TimePicker ClockIdentifier="24HourClock" Grid.Column="0" Grid.Row="0" IsEnabled="{x:Bind SearchActionsTimePickerToggleSwitch.IsOn, Mode=OneWay}"/>
                                                    <Viewbox Grid.Column="1" Grid.Row="0" MaxHeight="32">
                                                        <ToggleSwitch x:Name="SearchActionsTimePickerToggleSwitch" Style="{StaticResource FlippedToggleSwitchStyle}" OnContent="{x:Null}" OffContent="{x:Null}"/>
                                                    </Viewbox>

                                                    <DatePicker Grid.Column="0" Grid.Row="1" IsEnabled="{x:Bind SearchActionsDatePickerToggleSwitch.IsOn, Mode=OneWay}"/>
                                                    <Viewbox Grid.Column="1" Grid.Row="1" MaxHeight="32">
                                                        <ToggleSwitch x:Name="SearchActionsDatePickerToggleSwitch" Style="{StaticResource FlippedToggleSwitchStyle}" OnContent="{x:Null}" OffContent="{x:Null}"/>
                                                    </Viewbox>
                                                </Grid>
                                            </Flyout>
                                        </ToggleSplitButton.Flyout>
                                    </ToggleSplitButton>
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <Grid Grid.Column="1" MinHeight="35" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button x:Name="OpenQuickSettingsButton" Style="{StaticResource IconButtonStyle}" Grid.Column="1" VerticalAlignment="Top"
                                    Margin="0,3,0,0"
                                    Click="OpenQuickSettingsButton_Click">
                                <ToolTipService.ToolTip>
                                    <TextBlock x:Uid="OpenQuickSettingsButton_ToolTipTextBlock"/>
                                </ToolTipService.ToolTip>
                                <FontIcon x:Name="OpenQuickSettingsButtonFontIcon" FontSize="16" Glyph="&#xe76b;"/>
                            </Button>

                            <StackPanel x:Name="QuickSettingsStackPanel" CacheMode="BitmapCache" Visibility="Collapsed" Opacity="0" Grid.Column="0" Orientation="Horizontal" 
                                        Spacing="5" VerticalAlignment="Stretch">
                                <StackPanel.OpacityTransition>
                                    <ScalarTransition/>
                                </StackPanel.OpacityTransition>

                                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Stretch" Background="{ThemeResource SubtleFillColorTertiaryBrush}" 
                                            CornerRadius="{StaticResource OverlayCornerRadius}" Padding="7,5">
                                    <Button x:Name="ReloadTriggersButton" Click="ReloadTriggersButton_Click">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Uid="ReloadTriggersButton_ToolTipTextBlock"/>
                                        </ToolTipService.ToolTip>
                                        <FontIcon FontSize="16" Glyph="&#xe72c;"/>
                                    </Button>

                                    <ToggleButton x:Name="SilenceNotificationsToggleButton">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Uid="SilenceNotificationsToggleButton_ToolTipTextBlock"/>
                                        </ToolTipService.ToolTip>
                                        <FontIcon FontSize="16" Glyph="&#xe7ed;"/>
                                    </ToggleButton>

                                    <ToggleButton x:Name="HistoryToggleButton">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Uid="HistoryToggleButton_ToolTipTextBlock"/>
                                        </ToolTipService.ToolTip>
                                        <FontIcon FontSize="16" Glyph="&#xe823;"/>
                                    </ToggleButton>
                                </StackPanel>

                                <StackPanel
                                    Orientation="Horizontal" 
                                    Spacing="5" 
                                    Margin="5,0,5,0" 
                                    VerticalAlignment="Stretch" 
                                    Background="{ThemeResource SubtleFillColorTertiaryBrush}" 
                                    CornerRadius="{StaticResource OverlayCornerRadius}" 
                                    Padding="7,5">

                                    <ToggleButton x:Name="CompactModeToggleButton" Click="CompactModeToggleButton_Click">
                                        <FontIcon FontSize="16" Glyph="&#xe949;"/>
                                    </ToggleButton>

                                    <Button x:Name="ClearActionsButton" Click="ClearActionsButton_Click">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Uid="ClearActionsButtonToolTipTextBlock"/>
                                        </ToolTipService.ToolTip>
                                        <FontIcon FontSize="16" Glyph="&#xe894;"/>
                                    </Button>

                                    <Button x:Name="ImportClipboardButton" Click="ImportFromClipboardButton_Click">
                                        <ToolTipService.ToolTip>
                                            <TextBlock x:Uid="ImportFromClipboardButtonToolTipTextBlock"/>
                                        </ToolTipService.ToolTip>
                                        <FontIcon FontSize="16" Glyph="&#xe8b6;"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <ListView 
                        x:Name="SearchActionsListView" 
                        x:Uid="SearchActionsListView" 
                        x:Load="False"
                        Visibility="Collapsed" 
                        Opacity="0"
                        Grid.Row="2"
                        MaxHeight="320"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{ThemeResource TextFillColorPrimaryBrush}"
                        Margin="0,0,0,10"
                        IsDoubleTapEnabled="True"
                        SelectionMode="Single"
                        DoubleTapped="SearchActionsListView_DoubleTapped">
                        <ListView.OpacityTransition>
                            <ScalarTransition/>
                        </ListView.OpacityTransition>
                        <ListView.Header>
                            <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,5,0,3">
                                <TextBlock x:Uid="SearchActionsListViewHeader"/>
                                <TextBlock x:Name="SearchActionsResultsTextBlock"/>
                            </StackPanel>
                        </ListView.Header>
                        <ListView.FooterTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Style="{StaticResource SettingSubheaderTextBlockStyle}" Margin="0,0,0,5"/>
                            </DataTemplate>
                        </ListView.FooterTemplate>
                    </ListView>
                    
                    <ListView x:Name="ActionsListView" SelectionMode="None" ItemsSource="{x:Bind Actions}" Padding="0" Margin="0" Grid.Row="3">
                        <ListView.Resources>
                            <Style TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>

        <!--#region TeachingTips -->
        <TeachingTip 
            x:Name="SettingsPivotTeachingTip" 
            x:Uid="SettingsPivotTeachingTip"
            Target="{x:Bind SettingsPivot}"
            ActionButtonClick="TeachingTip_CloseButtonClick">
            <TeachingTip.ActionButtonContent>
                <Grid ColumnSpacing="4" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Uid="NextTeachingTipTextBlock" Grid.Column="1" HorizontalAlignment="Center"/>
                    <FontIcon Glyph="&#xe72a;" FontSize="14" Grid.Column="2"/>
                </Grid>
            </TeachingTip.ActionButtonContent>
        </TeachingTip>
        
        <TeachingTip 
            x:Name="ClipboardTriggersPivotTeachingTip" 
